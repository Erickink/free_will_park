<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:paddingBottom="25dp"
    android:id="@+id/content_wizard"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    >

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Menu Maxi Best Of"
        android:background="@drawable/vignette_back"
        android:textColor="#000000"
        android:textSize="24dp"
        android:textStyle="bold"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/company_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="McDonald's"
        android:textColor="#000000"
        android:textSize="22dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="30dp"
        android:layout_marginStart="25dp"
        />

    <TextView
        android:id="@+id/need_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100 points"
        android:textColor="#2BD598"
        android:textSize="17dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="33dp"
        android:layout_marginStart="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom|start"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:borderWidth="0dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="25dp"
        app:elevation="0dp"
        android:backgroundTint="@color/purple_500"
        android:background="@color/purple_500"
        app:srcCompat="@drawable/ic_arrow_rightv2"
        android:theme="@style/fabV"
        />

</RelativeLayout>